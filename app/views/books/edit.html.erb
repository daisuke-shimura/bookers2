 <%= form_with model: @book do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

        <h1>Editing Book</h1>
        
        <div class="form-group">
          <p>Title</p>
          <%= f.text_field :title %>
        </div>
        
        <div class="form-group">
          <p>Opinion</p>
          <%= f.text_area :body %>
        </div>

        <div class="form-group">
          <button type="submit" class="btn btn-success">
            Update Book
          </button>
        </div>

        <%= link_to "Show", book_path(@book.id)%>
        <a>|</a>
        <%= link_to "Back", '/books' %>

      </div>
    </div>
  </div>


  <% end %>