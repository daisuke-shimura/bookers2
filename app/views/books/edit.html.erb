 <%= form_with model: @book do |f| %>
    
    <h2>Editing Book</h2>
    
    <p>Title</p>
    <%= f.text_field :title %>
    
    <p>Opinion</p>
    <%= f.text_area :body %>
    
    <div>
      <%= f.submit "Update Book" %>
    </div>
    
    <%= link_to "Show", book_path(@book.id)%>
    <%= link_to "Back", '/books' %>
    
  <% end %>