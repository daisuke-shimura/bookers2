<div class="message">
  <%= flash[:notice] %>
 </div>

<div class="container px-5">
 <div class="row">
     <!-- User info -->
  <div class="col-md-3">

    <h3>User info</h3>
    <!--%= image_tag book.user.get_profile_image(100,100) %-->
    <table class="table table-striped">
     <tbody>
      <tr>
        <td><p>name</p></td>
        <td><p><span><%= @book.user.name %></span></p></td>
      </tr>
      <tr>
        <td><p>introduction</p></td>
        <td><p><span><%= @book.user.introduction %></span></p></td>
      </tr>

     </tbody>
    </table>

    <div class="row">
    <% if @user == current_user %>
      <p><%= link_to "編集", edit_user_path %></p>
    <% end %>
    </div>


    <!--新規作成 -->


       <div>
        <h3>New book</h3>
        <%= form_with model: @book do |f| %>
         <h4>Title</h4>
         <%= f.text_field :title %>
      　  <h4>Opinion</h4>
         <%= f.text_area :body %>

         <div class="submit">
          <%= f.submit "Create Book" %>
         </div>
         <% end %>
         </div>

  </div>


     <!--book一覧-->
  <div class="col-md-8 offset-md-1">
   <h2>Books detail</h2>
    <table>
     <thead>
      <tbody>

        <tr>
          <td><%= image_tag @book.user.get_profile_image(100,100) %><br>
              <p><span><%= @book.user.name %></span></p>
          </td>
          <td><p><span><%= @book.title %></span></p></td>
          <td><p><span><%= @book.body %></span></p></td>
          <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
          <td><%= link_to "Destroy", book_path(@book.id),method: :delete, "data-confirm" => "Are you sure？" %></td>
        </tr>

      </tbody>
     </thead>
    </table>
  </div>
