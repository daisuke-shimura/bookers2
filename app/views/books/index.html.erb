<!--Books-->
<div class="container px-5">

  <!--検索-->
  <%= form_with url: books_path, method: :get do |f| %>
    <%= f.text_field :category %>
    <%= f.submit "検索" %>
  <% end %>

  <!--新規作成のエラーメッセージ -->

    <% if @hon.errors.any? %>

    <h3>
    <%= @hon.errors.count %> errors prohibited this obj from being saved:
    </h3>
     <ul>
      <% @hon.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
    <% end %>

  <div class="row">
    <div class="col-md-3">
      <!--共通-->
      <%= render 'userinfo' , user: current_user %>
      <!--共通-->
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <%= link_to "新しい順", books_path(sort: 'created_at DESC') %> 
      |
      <%= link_to "評価の高い順", books_path(sort: 'star DESC') %>
      <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th><h4>Title</h4></th>
          <th><h4>Opinion</h4></th>
          <th><h5>Tag</h5></th>
          <th><h5>Comment</h5></th>
          <th><h5><i class="fa-solid fa-heart"></i></h5></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>
          <%= link_to user_path(book.user.id) do %>
            <%= image_tag book.user.get_profile_image(100,100) %>
          <% end %>
          </td>
          <td>
          <%= link_to  book_path(book.id) do %>
            <%= book.title %>
          <% end %>
          </td>
          <td><p><span><%= book.body %></span></p></td>

          <td>
            <%= link_to books_path(category: book.tag) do %>
              <%= book.tag %>
            <% end %>
          </td>

          <td>
            <p><%= link_to "#{book.book_comments.count} コメント", book_path(book.id) %></p>
          </td>

          <td id="favorite-btn-<%= book.id %>">
            <%= render "favorites/favorite-btn", book:book %>
          </td>

          <td>
            <%= render "star_rate", book: book %>
          </td>

        </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>


