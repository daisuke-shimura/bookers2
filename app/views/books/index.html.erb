 <div class="message">
  <%= flash[:notice] %>
 </div>

 <div class="container px-5">
  <div class="row">
   <!--User info)-->
   <div class="col-md-3">

    <h2>User info</h2>
    <%= image_tag current_user.get_profile_image(100,100) %>
    <table class="table table-striped">
     <tbody>
      <tr>
       <td><p>name</p></td>
       <td><p><span><%= current_user.name %></span></p></td>
      </tr>
      <tr>
       <td><p> introduction </p></td>
       <td><p><span><%= current_user.introduction %></span></p></td>
      </tr>
     </tbody>
    </table>



   <div class="New-book">
    <h3>New book</h3>

    <%= form_with model: @book do |f| %>
    <h4>title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <div class="submit">
     <%= f.submit "Create Book" %>
    </div>
   <% end %>
   </div>

  </div>

 <div class="col-md-8 offset-md-1">
 <h2>Books</h2>
  <table>
   <thead>
    <tr>
      <th><h4>Title</h4></th>
      <th><h4>Body</h4></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
   </thead>

   <tbody>
     <% @books.each do |book| %>
    <tr>
      <td><p><span><%= book.title %></span></p></td>
      <td><p><span><%= book.body %></span></p></td>
      <td><%= link_to "Show", book_path(book.id)%></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id),method: :delete, "data-confirm" => "Are you sure？" %></td>
    </tr>
    <% end %>
   </tbody>
  </table>
 </div>

</div>
</div>

<!--新規作成のエラーメッセージ -->

<% if @hon.errors.any? %>

  <div class="message-box">　<%= @hon.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @hon.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>
