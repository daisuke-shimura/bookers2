<div class="container">

  <div class="row">

    <div class="col-3">
      <%= render "books/userinfo", user: current_user %> 
    </div>


    <div class="col-8 offset-1">
      <h2>Groups</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @groups.each do |group| %>
          <tr>
            <%= render "row", group: group %>
          </tr>
          <% end %>
        </tbody>
      </table>
    
    </div>
  
  </div>

</div>
