<div class="container">
  <div class="row justify-content-center">
    <h2>Event Mail</h2>
  </div>
  <div class="row justify-content-center">
    <%= form_with url:group_send_mail_path(@group), method: :get do |f| %>

      <%= f.label :mail_title, "タイトル", class:"mt-2" %><br>
      <%= f.text_field :mail_title, class: "form-control" %>
      <br>
      <%= f.label :mail_content, "本文", class:"mt-2" %><br>
      <%= f.text_area :mail_content, class:"form-control" %>
      <br>
      <%= f.submit "送信", class:"btn btn-success mt-2" %>

    <% end %>
  </div>
</div>