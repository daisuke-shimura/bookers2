<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/d81676dda2.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class = "shadow-sm">
      <nav class = "navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <% if user_signed_in? %>
              <a class = "navbar-brand" href="/">
                <span>Bookers</span>
              </a>

              <button class = "navbar-toggler" type = "button" data-toggle = "collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded = "false" aria-label = "Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>

                <div class = "collapse navbar-collapse" id="navbarNavDropdown">

                  <ul class="navbar-nav ml-auto">

                    <li>
                      <div class="navbar-brand">
                        <div class="text-white">
                          <i class="fa-solid fa-house"></i>
                            <%= link_to "Home" , user_path(current_user.id) ,class: 'text-white'%>
                        </div>
                      </div>
                    </li>

                    <li>
                      <div class = "navbar-brand">
                        <div class="text-white">
                          <i class="fa-solid fa-users"></i>
                            <%= link_to "Users" ,"/users" ,class: 'text-white' %>
                        </div>
                      </div>
                    </li>

                    <li>
                      <div class = "navbar-brand" >
                        <div class="text-white">
                          <i class="fa-solid fa-book-open"></i>
                            <%= link_to "Books" ,"/books" ,class: 'text-white'%>
                        </div>
                      </div>
                    </li>

                    <li>
                      <div class = "navbar-brand" >
                        <div class="text-white">
                          <i class="fa-solid fa-right-from-bracket"></i>
                            <%= link_to "Log out",destroy_user_session_path, method: :delete ,class: 'text-white'%>
                        </div>
                      </div>
                    </li>
                  </ul>
                </div>

          <% else %>

            <a class = "navbar-brand" href="/">
              <span>Bookers</span>
            </a>

            <button class = "navbar-toggler" type = "button" data-toggle = "collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded = "false" aria-label = "Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <ul class="navbar-nav ml-auto">

              <li>
                <div class="navbar-brand">
                  <div class="text-white">
                    <i class="fa-solid fa-house"></i>
                    <%= link_to "Home", '/' ,class: 'text-white'%>
                  </div>
                </div>
              </li>

              <li>
                <div class="navbar-brand">
                  <div class="text-white">
                    <i class="fa-solid fa-link"></i>
                    <%= link_to "About",about_path ,class: 'text-white'%>
                  </div>
                </div>
              </li>

              <li>
                <div class="navbar-brand">
                  <div class="text-white">
                    <i class="fa-solid fa-user-plus"></i>
                    <%= link_to "Sign up", new_user_registration_path ,class: 'text-white'%>
                  </div>
                </div>
              </li>

              <li>
                <div class="navbar-brand">
                  <div class="text-white">
                    <i class="fa-solid fa-right-to-bracket"></i>
                    <%= link_to "Log in", new_user_session_path ,class: 'text-white'%>
                  </div>
                </div>
              </li>
            </ul>

          <% end %>

       </div>
      </nav>
    </header>


    <main>
      <p id="notice"></p>
      <%= yield %>
    </main>



    <footer>
      <div class="container mt-5">
        <div class = "row">
          <div class = "mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>


  </body>
</html>
