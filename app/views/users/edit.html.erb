    
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
      
      <div class="form-group">
        <p for="inputName">Name</p>
        <%= f.text_field :name, autofocus: true, id:"inputName" %>
      </div>
      
      <div class="form-group">
        <p for="inputImage">Image</p>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
        
      <div class="form-group">
        <p for="inputIntroduction">introduction</p>
        <%= f.text_area :introduction, autofocus: true %>
      </div>
      
      <div class="form-group">
          <button type="submit" class="btn btn-secondary">
            Update User
          </button>
        </div>
        
      <% end %>
      
    </div>
  </div>
</div>    